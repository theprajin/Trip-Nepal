<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/display_map"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
<ScrollView
    android:id="@+id/scroll_map"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/display_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/boudhanath" />

    <TextView
        android:id="@+id/display_txt"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boudhanath"
        android:layout_marginLeft="16dp"
        android:textSize="20dp"/>



    <TextView
        android:id="@+id/display_descp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="16dp"
        android:textSize="15dp"
        android:text=""/>


        <Button
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/view_in_map"
            android:textAlignment="gravity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View in map"/>

    </LinearLayout>

</ScrollView>

</FrameLayout>